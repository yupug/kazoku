<div class="navbar navbar-fixed-top">
	<div class="navbar-inner" style="background-color: #66cc00;background-image: -moz-linear-gradient(center top , #00cc33, #00cc00);">
		<div class="container">
			<a class="brand" href="#">
   	 			FamFun
			</a>

<% if @current_user %>
			<ul class="nav">
    			<li class="active">
    				<a href="#">
						<i class="icon-home icon-white"></i>
    					ホーム
    				</a>
			    </li>
				<li><a href="<%= url_for(:controller => 'timelines', :action => "index") %>">
					<i class="icon-time icon-white"></i>
					タイムライン
				</a></li>
				<li class="dropdown" id="albums-menu">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#albums-menu">
						<i class="icon-camera icon-white"></i>
						アルバム
						<b class="caret"></b>
					</a>
					<ul class="dropdown-menu">
						<li><a href="/photos/">
							<i class="icon-book"></i>
							家族みんな
						</a></li>
						<li class="divider"></li>
<% @kazoku_users.each do |user| -%>
						<li><a href="/users/photos/<%= user.id %>/">
							<i class="icon-user"></i>
							<%= user.name %>
						</a></li>
<% end -%>
						<li class="divider"></li>
						<li><a href="/users/photos/<%= @current_user.id %>">
							<i class="icon-user"></i>
							自分
						</a></li>
						<li><a href="/photos/new/">
							<i class="icon-upload"></i>
							写真をアップロード
						</a></li>
					</ul>
				</li>
			</ul>
			<ul class="nav pull-right">
				<li class="dropdown" id="menu1">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">
						<%= @current_user.email%>
					<b class="caret"></b>
					</a>
					<ul class="dropdown-menu">
						<li><a href="#">
							<i class="icon-edit"></i>
							アカウント設定
						</a></li>
						<li><a href="#">
							<i class="icon-cog"></i>
							管理者メニュー
						</a></li>
						<li class="divider"></li>
						<li><a href="/logout">
							<i class="icon-off"></i>
							ログアウト
						</a></li>
					</ul>
				</li>
			</ul>
<% else -%>
			<%= form_tag ({:controller => "login", :action => "login"}, {:class => 'pull-right navbar-search form-inline'}) do %>
				<label style="color:gray;">Email</label>
				<%= text_field_tag 'email', flash[:email], {:class=> 'input-medium', :placeholder => 'メールアドレス'} %>
				&nbsp;&nbsp;
				<label style="color:gray;">パスワード</label>
				<%= password_field_tag 'password', '', {:class=> 'input-medium', :placeholder => 'パスワード'} %>
				&nbsp;&nbsp;
				<button type="submit" class="btn-info btn-small">ログイン</button>
			<% end -%>
<% end -%>    
		</div>
	</div>
</div>
